<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invitation_main_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <include
        android:id="@+id/topPanel"
        layout="@layout/top_item"
        />

    <include
        android:id="@+id/bottomDomestos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/domestos_bottom" />

    <ListView
        android:id="@+id/inv_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomDomestos"
        android:layout_below="@+id/topPanel"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

    </ListView>

<!--    <ProgressBar
        android:id="@+id/inv1_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />-->

</RelativeLayout>
